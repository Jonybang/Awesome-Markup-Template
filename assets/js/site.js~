$(function(){
	$('#my-slider').slick({
		adaptiveHeight: true,
		//variableWidth: true,
		dots: true,
		arrows: true,
		slidesToShow: 1,
		slidesToScroll: 1,
		autoplay: true,
		autoplaySpeed: 3000,
		prevArrow: '<span class="slick-arrow-lg-prev"></span>',
		nextArrow: '<span class="slick-arrow-lg-next"></span>'
	});

	$.extend($.noty.defaults, {
		theme: 'relax',
		timeout: 4000,
		animation : {
			open  : 'animated flipInX',
			close : 'animated flipOutX'
		}, 
		type: 'success'
	});

	$('#my-form').ajaxForm(function() { 
		var n = noty({text: 'Thanks for you message!'});
	}, function(){
		var n = noty({text: 'Sorry, try again later :('});
	});

	$('.select2').select2();
})
